# Production Environment Configuration for Namada RPC Proxy
# Copy this file to .env in your project root and customize values

# ===============================
# SERVER CONFIGURATION
# ===============================
NODE_ENV=production
PORT=3000
HOST=127.0.0.1

# ===============================
# LOGGING CONFIGURATION  
# ===============================
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_MAX_SIZE=100m

# ===============================
# HEALTH MONITORING
# ===============================
HEALTH_CHECK_INTERVAL=30000
REGISTRY_UPDATE_INTERVAL=600000
SYNC_TOLERANCE_BLOCKS=50

# ===============================
# REQUEST CONFIGURATION
# ===============================
REQUEST_TIMEOUT=30000
REQUEST_RETRY_ATTEMPTS=3
REQUEST_RETRY_DELAY=1000

# ===============================
# RATE LIMITING
# ===============================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ===============================
# CHAIN REGISTRIES
# ===============================
NAMADA_REGISTRY_URL=https://github.com/Luminara-Hub/namada-ecosystem/blob/main/user-and-dev-tools/mainnet/rpc.json
HOUSEFIRE_REGISTRY_URL=https://github.com/Luminara-Hub/namada-ecosystem/blob/main/user-and-dev-tools/testnet/housefire/rpc.json

# ===============================
# SECURITY
# ===============================
TRUST_PROXY=true

# ===============================
# PERFORMANCE
# ===============================
RESPONSE_CACHE_TTL=5000
CONNECTION_POOL_SIZE=50

# ===============================
# MONITORING (Optional)
# ===============================
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090 